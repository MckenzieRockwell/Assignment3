<div class='row'>
	<div clas="col-md-8 col-md-offset-2">
		<div class="panel panel-default">
				<ul class='list-group'>
					<li class='list-group-item'>
						<div class='row'>
							<div class='col-md-4'>
								<h4>Task Name</h4>
							</div>
							<div class='col-md-5'>
								<h4>Note</h4>
							</div>
							<div class='col-md-2 col-md-offset-1'>
								<h4>Completed</h4>
							</div>
						</div>
					</li>
					<% for(var i=0; i< todos.length; i++){ %>
					<li class='list-group-item'>
						<% var thistask = todos[i] %>
						<div class='row'>
							<div class='col-md-4'>
							<%= thistask.name %>
						<!-- 		{{thistask.name}} -->
							</div>
							<div class='col-md-5'>
							<%= thistask.notes %>
<!-- 								{{this.note}} -->
							</div>
							<div class='col-md-2 col-md-offset-1'>
							</div>
						</div>
					</li>
					<% }%>
					<li class='list-group-item'>
						<form class='form-horizontal' method='post' action='/todos/add'>
							<div class='form-group'>
								<label for='nameInput' class='col-md-1 control-label'>Name:</label>
								<div class='col-md-3'>
									<input id='nameInput' name='name' type='text' class='form-control'>
								</div>
								<label for='noteInput' class='col-md-1 control-label'>Note:</label>
								<div class='col-md-4'>
									<input id='noteInput' class='form-control' name='note' type='text'>
								</div>
								<div class='col-md-1 col-md-offset-2'>
									<button type='submit' class='btn btn-default'>add</button>
								</div>
							</div>
						</form>
					</li>
				</ul>
		</div>
	</div>
</div>